{
    "project": {
      "name": "CakeShop Management System",
      "description": "A Java-based application for managing a cake shop with customer and employee functionalities.",
      "structure": {
        "folders": [
          {
            "name": "src",
            "description": "Contains all Java source code files",
            "files": [
              "Main.java"
            ]
          },
          {
            "name": "lib",
            "description": "Contains external libraries",
            "files": [
              "mysql-connector-java-8.x.x.jar"
            ]
          },
          {
            "name": "resources",
            "description": "Contains resources like database setup files",
            "files": [
              "cakeshop.sql"
            ]
          }
        ]
      },
      "dependencies": {
        "libraries": [
          {
            "name": "MySQL Connector/J",
            "version": "8.x.x",
            "download_url": "https://dev.mysql.com/downloads/connector/j/"
          }
        ]
      },
      "setup": {
        "steps": [
          {
            "step": 1,
            "description": "Install MySQL and set up a database named `cakeshop`."
          },
          {
            "step": 2,
            "description": "Run the `cakeshop.sql` file to create the database schema and populate data."
          },
          {
            "step": 3,
            "description": "Add the MySQL Connector JAR file to your project's classpath."
          },
          {
            "step": 4,
            "description": "Compile the Java project using `javac` or an IDE like Eclipse or IntelliJ."
          },
          {
            "step": 5,
            "description": "Run the application using `java -cp 'bin;lib/mysql-connector-java-8.x.x.jar' Main`."
          }
        ]
      },
      "features": {
        "customer_features": [
          "Login/Registration",
          "View and add cakes to the wishlist",
          "Add cakes to the shopping cart",
          "Order cakes with options for delivery or pickup",
          "Track order status through various stages"
        ],
        "employee_features": [
          "View all orders and their details",
          "Update order status across five stages",
          "Manage stock of materials and decorations",
          "Track low stock levels and notify when items run out"
        ]
      },
      "database": {
        "name": "cakeshop",
        "tables": [
          {
            "name": "customers",
            "columns": ["id", "name", "email", "password", "address"]
          },
          {
            "name": "employees",
            "columns": ["id", "name", "email", "password", "role"]
          },
          {
            "name": "cakes",
            "columns": ["id", "type", "flavor", "price", "stock"]
          },
          {
            "name": "orders",
            "columns": ["id", "customer_id", "status", "total_price", "pickup_or_delivery"]
          },
          {
            "name": "order_items",
            "columns": ["order_id", "cake_id", "quantity"]
          }
        ]
      },
      "authors": [
        {
          "name": "Your Name",
          "email": "your.email@example.com",
          "role": "Developer"
        }
      ]
    }
  }
  